@model PharmaKursWork.ViewModels.AccountViewModels.LoginViewModel;
<div class="ks-loginpage container border-dark position-absolute">
    <div class="d-flex justify-content-center align-items-center">
        <form asp-controller="Account" asp-action="Index" class="ks-loginform">
            <div class="form-group m-4">
                <label for="username">Логін</label>
                <input asp-for="Username" class="form-control" id="username" placeholder="Введіть логін">
                <span asp-validation-for="Username"></span>
            </div>
            <div class="form-group m-4">
                <label for="password">Пароль</label>
                <input asp-for="Password" type="password" class="form-control" id="password" placeholder="Введіть пароль">
                <span asp-validation-for="Password"></span>
            </div>
            <div class="d-flex justify-content-center mb-2">
                <button type="submit" class="btn btn-primary">Увійти</button>
            </div>
        </form>
    </div>
    <div class="d-flex justify-content-center">Немає аккаунта?<a asp-controller="Account" asp-action="Register">Реєстрація</a></div>
</div>