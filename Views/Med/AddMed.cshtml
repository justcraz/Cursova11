@model PharmaKursWork.ViewModels.MedViewModels.AddMedModalViewModel;
@{
    Layout = null;
}

<div id="idi" class="modal fade" tabindex="-1" aria-labelledby="editModal" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Додати ліки</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form asp-action="AddMed" asp-controller="Med">
                    <input type="hidden" asp-for="AddMedModal.Id" />
                    <div class="mb-3 row align-items-center">
                        <div class="col-auto">
                            <label for="Name" class="col-form-label">@Html.DisplayNameFor(_ => Model.AddMedModal.Name)</label>
                        </div>
                        <div class="col-auto flex-grow-1">
                            <input asp-for="AddMedModal.Name" class="form-control" id="Name" required>
                        </div>
                    </div>
                    <div class="mb-3 row align-items-center">
                        <div class="col-auto">
                            <label for="expenses" class="form-label">@Html.DisplayNameFor(_ => Model.AddMedModal.Expenses)</label>
                        </div>
                        <div class="col-auto flex-grow-1">
                            <input type="number" asp-for="AddMedModal.Expenses" class="form-control" id="expenses" required>
                        </div>
                    </div>
                    <div class="mb-3 row align-items-center">
                        <div class="col-auto">
                            <label for="lab" class="form-label">@Html.DisplayNameFor(_ => Model.AddMedModal.LabratoryId)</label>
                        </div>
                        <div class="col-auto flex-grow-1">
                            <select class="form-control" asp-for="AddMedModal.LabratoryId" asp-items="Model.LaboratoryList" required></select>
                        </div>
                    </div>
                    <div class="mb-3 row align-items-center">
                        <div class="col-auto">
                            <label for="unitMesuare" class="form-label">@Html.DisplayNameFor(_ => Model.AddMedModal.UnitMeasureId)</label>
                        </div>
                        <div class="col-auto flex-grow-1">
                            <select class="form-control" asp-for="AddMedModal.UnitMeasureId" asp-items="Model.UnitMeasuresList" required></select>
                        </div>
                    </div>
                    <div class="mb-3 row align-items-center">
                        <div class="col-auto">
                            <label for="commodityGroup" class="form-label">@Html.DisplayNameFor(_ => Model.AddMedModal.CommodityGroupId)</label>
                        </div>
                        <div class="col-auto flex-grow-1">
                            <select class="form-control" asp-for="AddMedModal.CommodityGroupId" asp-items="Model.CommodityGroupsList" required></select>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Закрити</button>
                        <button type="submit" class="btn btn-primary">Додати</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>